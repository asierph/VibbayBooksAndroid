<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ArticuloFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="En venta"
            android:id="@+id/txtEstado"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:id="@+id/txtDenom"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_weight="0.05"
            android:textIsSelectable="false" />
        <ImageView
            android:layout_width="244dp"
            android:layout_height="220dp"
            android:id="@+id/imgArticulo"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPuja"
            android:layout_gravity="center_horizontal"
            android:hint="Importe de la puja"
            android:textAlignment="center"
            android:digits="1234567890,"
            android:inputType="number" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio inicial:"
            android:id="@+id/txtPrecio"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha publicaciÃ³n: "
            android:id="@+id/txtFecha"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pujar"
            android:id="@+id/btnPujar"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>
